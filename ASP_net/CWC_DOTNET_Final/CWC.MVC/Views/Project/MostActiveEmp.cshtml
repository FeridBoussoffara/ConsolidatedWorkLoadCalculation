@model IEnumerable<CWC.MVC.Models.ProjectViewModel>

@{
    ViewBag.Title = "MostActiveEmp";
}

<h2>Most Active Employee</h2>

<h1>The Most Active Employee is : @ViewBag.most</h1>

<p>His Projects :</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Budget)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        
        
        <th></th>
    </tr>

@foreach (var item in @ViewBag.proj) {
    <tr>

        <td>
            @item.Name
        </td>
        <td>
            @item.StartDate
        </td>
        <td>
            @item.EndDate
        </td>
        <td>
            @item.Budget
        </td>
        
        <td>
            @item.Category
        </td>
        
        
        
            
           
       
    </tr>
}

</table>
@Html.ActionLink("Return to Project's list", "Index","" ,new { @class = "btn btn-primary" }) 
