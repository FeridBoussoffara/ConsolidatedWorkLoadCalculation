@model CWC.MVC.Models.ProviderModels

@{
    ViewBag.Title = "Details";
}

@if (ViewBag.Name != null)
{
    <h2>@ViewBag.Name</h2>
}
else
{
    <h2>@ViewBag.Title</h2>
}

<div class="row">
    <div class="col-md-6 col-sm-12">
        <div class="portlet yellow-crusta box">
            <div class="portlet-title">
                <div class="caption">
                    <i></i>Task Details
                </div>

            </div>
            <div class="portlet-body">

                <div class="row static-info">
                    <div class="col-md-5 name"> @Html.DisplayNameFor(model => model.Name): </div>
                    <div class="col-md-7 value"> @Html.DisplayFor(model => model.Name) 
                    @Html.DisplayFor(model => model.Name)
                 </div>
                </div>

                <div class="row static-info">
                    <div class="col-md-5 name"> @Html.DisplayNameFor(model => model.NumTel): </div>
                    <div class="col-md-7 value">
                        @Html.DisplayFor(model => model.NumTel)
                      </div>
                </div>
                <div class="row static-info">
                    <div class="col-md-5 name"> @Html.DisplayNameFor(model => model.Email): </div>
                    <div class="col-md-7 value">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>

                <div class="row static-info">
                    <div class="col-md-5 name"> @Html.DisplayNameFor(model => model.Logo): </div>
                    <div class="col-md-7 value">
                        @Html.Partial("_DisplayProvider", Model)
                    </div>
                </div>

                <div class="row static-info">
                    <div class="col-md-5 name"> @Html.DisplayNameFor(model => model.Adresse): </div>
                    <div class="col-md-7 value">
                        @Html.DisplayFor(model => model.Adresse)
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProviderId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
